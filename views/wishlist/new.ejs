<section class="section">
    <div class="container">
        <div class="columns is-desktop is-justify-content-center">
            <div class="column is-8-desktop">
                <div class="p-6 shadow rounded content">
                    <h2 class="section-title">New Game</h2>
                    <form method="POST" action="/wishlist/new">
                        <div class="columns is-multiline">
                            <div class="form-group column is-12">
                                <label for="name">Game Name<br>
                                    </p></label>
                                <input type="text" class="input" id="name" name="name" placeholder="Game Name" required>
                            </div>
                            <div class="form-group column is-12">
                                <label for="review_desc">Review Description<br>
                                    </p></label>
                                <input type="text" class="input" id="review_desc" name="review_desc"
                                    placeholder="Review Description" required>
                            </div>
                            <div class="form-group column is-12">
                                <label for="release_string">Release Date<br>
                                    </p></label>
                                <input type="text" class="input" id="release_string" name="release_string"
                                    placeholder="Release Date" required>
                            </div>
                            <div class="form-group column is-12">
                                <label for="tags">Genre(s)<br>
                                    </p></label>
                                <input type="text" class="input" id="tags" name="tags" placeholder="Genre(s)" required>
                            </div>
                            <div class="form-group column is-12">
                                <label for="is_free_game">Is it a free game?</label>
                                <select id="is_free_game" class="input custom-select" name="is_free_game" required>
                                    <option selected disabled>Yes or no?</option>
                                    <option value="true">Yes</option>
                                    <option value="false">No</option>
                                </select>
                            </div>
                            <div class="form-group column is-12">
                                <label for="background">Background Image Link (Not required)<br>
                                    </p></label>
                                <input type="text" class="input" id="background" name="background"
                                    placeholder="Background img link" required>
                            </div>
                            <div class="form-group column is-12">
                                <label for="deck_compat">Is it Steam Deck compatible?</label>
                                <select id="deck_compat" class="input custom-select" name="deck_compat" required>
                                    <option selected disabled>Unknown, Unsupported, Playable, or Verified</option>
                                    <option value="0">Unknown</option>
                                    <option value="1">Unsupported</option>
                                    <option value="2">Playable</option>
                                    <option value="3">Verified</option>
                                </select>
                            </div>
                            <div class="column is-12">
                                <button type="submit" class="btn btn-primary">Submit</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>