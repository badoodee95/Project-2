<!-- details page -->
<section class="pt-6">
    <div class="container shadow section-sm rounded">
        <div class="columns is-multiline">
            <!-- sidebar -->
            <div class="column is-3-desktop is-12-tablet">
                <ul class="sidenav">
                    <li title="Basic Startup" class="sidelist parent active">
                        <ul>
                            <% for( let i = 0; i < steam.length; i++ ) { %>
                            <% let game = steam[i]; %>
                            <li class="sidelist">
                                <a href="/wishlist/<%= game %>"><%= game %></a>
                                <% console.log('game!', game) %>
                                <% } %>
                            </li>
                        </ul>
                    </li>
            </div>
            <div class="column is-8-desktop is-12-tablet">
                <div class="px-4">
                    <h2 class="mb-4 has-text-weight-medium"></h2>
                    <div class="content">
                        <h2 class="has-text-light">Current Wishlist</h2>
                        <ul class="has-text-light">
                            <% for( let i = 0; i < steam.length; i++ ) { %>
                            <% let game = steam[i] %>
                            <li class="sidelist has-text-light">
                                <h5 class="has-text-light"><%= game %></h5>
                                <% } %>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
</section>
<!-- /details page -->